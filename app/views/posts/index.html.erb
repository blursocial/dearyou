<%= turbo_frame_tag "posts_frame" do %>
  <% if @posts.any? %>
    <div id="posts" data-next-page="<%= @posts.next_page %>">
      <%= render @posts %>
    </div>

    <!-- This will hold the "loading..." message -->
    <div id="loading" style="display: none; text-align: center; margin: 20px 0;">
      Loading...
    </div>

    <!-- Pagination controls (hidden by default for infinite scroll) -->
    <div id="pagination" style="display: none;">
      <% if @posts.next_page %>
        <%= will_paginate @posts %>
      <% end %>
    </div>
  <% else %>
    <p>No posts available. Be the first to post!</p>
  <% end %>
<% end %>

