<h1>Edit Profile</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="field">
    <%= f.label :name, "Full Name" %>
    <%= f.text_field :name, placeholder: "Enter your full name" %>
  </div>

  <div class="field">
    <%= f.label :bio, "Short Bio" %>
    <%= f.text_area :bio, placeholder: "Tell us something about yourself" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>
