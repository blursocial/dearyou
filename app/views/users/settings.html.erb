<h1>Settings</h1>

<%= form_with model: @user, url: update_settings_user_path(@user), method: :patch, local: true do |f| %>
  <div class="field">
    <%= label_tag :auto_accept_follows, "Automatically accept follow requests" %>
    <%= check_box_tag "settings[auto_accept_follows]", "true", @user.setting("auto_accept_follows") == "true" %>
  </div>

  <div class="actions">
    <%= f.submit "Save Settings" %>
  </div>
<% end %>
